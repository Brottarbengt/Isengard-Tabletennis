@page "{id:int}"
@model Tabletennis.Pages.Matches.DeleteModel
@{
    ViewData["Title"] = "Delete Match";
}
<h2>Ta bort Match</h2>

<div class="alert alert-danger">
    <strong>Är du säker på att du vill ta bort den här matchen.</strong>
</div>

<div class="card mb-3 shadow">
    <div class="card-header bg-danger text-white">
        Match @Model.Match.MatchDate.ToString("yyyy-MM-dd")
    </div>
    <div class="card-body">
        <p><strong>Spelare 1:</strong> @Model.Match.Player1Name</p>
        <p><strong>Spelare 2:</strong> @Model.Match.Player2Name</p>
        <p><strong>Vinnare:</strong> @Model.Match.Winner</p>
    </div>
</div>

<form method="post">
    <input type="hidden" asp-for="Match.MatchId" />
    <button type="submit" class="btn btn-danger">Ta bort</button>
    <a asp-page="/Matches/MatchHistory" class="btn btn-secondary">Ångra</a>
</form>
