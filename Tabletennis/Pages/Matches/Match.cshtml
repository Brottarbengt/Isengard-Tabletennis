@page
@model Tabletennis.Pages.Match.MatchModel
@{
    ViewData["Title"] = "Create Match";
}
<div class="container mt-5">
    <!-- Adds margin top -->
    <div class="card shadow">
        <div class="card-body">
            <h2 class="text-center mb-4">Create New Match</h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="MatchVM.Player1FirstName">Player 1 First Name</label>
                    <input asp-for="MatchVM.Player1FirstName" class="form-control" />
                    <span asp-validation-for="MatchVM.Player1FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MatchVM.Player1LastName">Player 1 Last Name</label>
                    <input asp-for="MatchVM.Player1LastName" class="form-control" />
                    <span asp-validation-for="MatchVM.Player1LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MatchVM.Player2FirstName">Player 2 First Name</label>
                    <input asp-for="MatchVM.Player2FirstName" class="form-control" />
                    <span asp-validation-for="MatchVM.Player2FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MatchVM.Player2LastName">Player 2 Last Name</label>
                    <input asp-for="MatchVM.Player2LastName" class="form-control" />
                    <span asp-validation-for="MatchVM.Player2LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MatchVM.BestOfSets" class="form-label">Best of Sets</label>
                    <select asp-for="MatchVM.BestOfSets" class="form-select" asp-items="new SelectList(new[] { 3, 5, 7 })">
                        <option value="">Select number of sets</option>
                    </select>
                    <span asp-validation-for="MatchVM.BestOfSets" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MatchVM.MatchDate">Match Date</label>
                    <input asp-for="MatchVM.MatchDate" type="datetime-local" class="form-control" />
                    <span asp-validation-for="MatchVM.MatchDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Is Single Match?</label><br />
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="MatchVM.IsSingle" value="true" />
                        <label class="form-check-label">Yes</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="MatchVM.IsSingle" value="false" />
                        <label class="form-check-label">No</label>
                    </div>
                </div>

                <div class="text-center mt-3">
                    <button type="submit" class="btn text-white w-100" style="background-color: #c4553e;">
                        Create Match
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
