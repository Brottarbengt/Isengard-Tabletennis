@model List<Tabletennis.ViewModels.Top10PlayersViewModel>

<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Topp 10 Spelare</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Spelare</th>
                            <th>Vinster</th>
                            <th>Matcher</th>
                            <th>Vinstprocent</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var player in Model)
                        {
                            <tr>
                                <td>@player.FullName</td>
                                <td>@player.NumberOfWins</td>
                                <td>@player.MatchesPlayed</td>
                                <td>@player.PlayerWinRatio.ToString("F1")%</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
