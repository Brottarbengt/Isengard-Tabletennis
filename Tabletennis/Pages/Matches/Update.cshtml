@page "{id:int}"
@model Tabletennis.Pages.Matches.UpdateModel
@{
    ViewData["Title"] = "Update Match";
}
<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header text-white" style="background-color: #c4553e;">
            <h3 class="mb-0">Update Match</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="MatchDto.MatchDate" class="form-label"></label>
                        <input asp-for="MatchDto.MatchDate" class="form-control" type="datetime-local" />
                        <span asp-validation-for="MatchDto.MatchDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="MatchDto.MatchType" class="form-label"></label>
                        <input asp-for="MatchDto.MatchType" class="form-control" />
                        <span asp-validation-for="MatchDto.MatchType" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3 align-items-end">
                    <div class="col-md-4">
                        <label asp-for="MatchDto.MatchWinner" class="form-label"></label>
                        <input asp-for="MatchDto.MatchWinner" class="form-control" />
                        <span asp-validation-for="MatchDto.MatchWinner" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <div class="form-check mt-4">
                            <input asp-for="MatchDto.IsSingle" style="background-color: #c4553e;" class="form-check-input" />
                            <label asp-for="MatchDto.IsSingle" class="form-check-label"></label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-check mt-4">
                            <input asp-for="MatchDto.IsCompleted" style="background-color: #c4553e;" class="form-check-input" />
                            <label asp-for="MatchDto.IsCompleted" class="form-check-label"></label>
                        </div>
                    </div>
                </div>

                <h5 class="mt-4">Players</h5>
                <div class="row">
                    @for (int i = 0; i < Model.MatchDto.Players.Count; i++)
                    {
                        <div class="col-md-6 mb-3">
                            <div class="border p-3 rounded bg-light">
                                <div class="mb-2">
                                    <label class="form-label">Player @i ID</label>
                                    <input asp-for="MatchDto.Players[@i].PlayerId" class="form-control" />
                                </div>
                                <div>
                                    <label class="form-label">Team Number</label>
                                    <input asp-for="MatchDto.Players[@i].TeamNumber" class="form-control" />
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="text-end mt-4">
                    <button type="submit" style="background-color: #c4553e;" class="btn btn-success">Update</button>
                    <a asp-page="/Matches/MatchHistory" class="btn btn-secondary">Back To Match List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}