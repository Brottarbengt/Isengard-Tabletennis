@page "{id:int}"
@model Tabletennis.Pages.Matches.UpdateModel
@{
    ViewData["Title"] = "Update Match";
}
<h2>Update Match</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Match.MatchDate"></label>
        <input asp-for="Match.MatchDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="Match.MatchDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Match.MatchType"></label>
        <input asp-for="Match.MatchType" class="form-control" />
        <span asp-validation-for="Match.MatchType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Match.MatchWinner">Match Winner (1 or 2)</label>
        <select asp-for="Match.MatchWinner" class="form-control">
            <option value="1">Player 1</option>
            <option value="2">Player 2</option>
        </select>
        <span asp-validation-for="Match.MatchWinner" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-page="/Matches/Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
