@model Tabletennis.ViewModels.VsPlayerStatsViewModel

<div class="col-12">
    <div class="card">
        <div class="card-header custom-thead">
            <h5 class="mb-0">Head-to-Head Statistik</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header custom-thead">
                            <h6 class="mb-0">@Model.Player1.FullName</h6>
                        </div>
                        <div class="card-body">
                            <p>Vinster: @Model.Player1Wins</p>
                            <p>Förluster: @Model.Player2Wins</p>
                            <p>Vinstprocent: @Model.Player1WinRatio.ToString("F1")%</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header custom-thead">
                            <h6 class="mb-0">@Model.Player2.FullName</h6>
                        </div>
                        <div class="card-body">
                            <p>Vinster: @Model.Player2Wins</p>
                            <p>Förluster: @Model.Player1Wins</p>
                            <p>Vinstprocent: @Model.Player2WinRatio.ToString("F1")%</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12">
                    <p class="mb-0">Totalt antal matcher: @Model.TotalMatches</p>
                </div>
            </div>
            @if (Model.LongestMatchDuration > TimeSpan.Zero)
            {
                <div class="row mt-3">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header custom-thead">
                                <h6 class="mb-0">Matchtider</h6>
                            </div>
                            <div class="card-body">
                                <p>Längsta match: @(Model.LongestMatchDuration.ToString(@"mm\:ss"))</p>
                                <p>Datum: @Model.LongestMatchDate.ToString("yyyy-MM-dd")</p>
                                <p>Snabbaste match: @(Model.ShortestMatchDuration.ToString(@"mm\:ss"))</p>
                                <p>Datum: @Model.ShortestMatchDate.ToString("yyyy-MM-dd")</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>