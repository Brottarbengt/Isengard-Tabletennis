@page
@model Tabletennis.Pages.Player.UpdateModel
@{
}


<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header text-white" style="background-color: #c4553e;">
            <h4 class="mb-0">Uppdatera Spelare</h4>
            <h3 class="mb-0">@Model.FullName</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="player.FirstName" class="form-label"></label>
                        <input asp-for="player.FirstName" class="form-control" />
                        <span asp-validation-for="player.FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="player.LastName" class="form-label"></label>
                        <input asp-for="player.LastName" class="form-control" />
                        <span asp-validation-for="player.LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="player.Email" class="form-label"></label>
                        <input asp-for="player.Email" class="form-control" />
                        <span asp-validation-for="player.Email" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="player.PhoneNumber" class="form-label"></label>
                        <input asp-for="player.PhoneNumber" class="form-control" />
                        <span asp-validation-for="player.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">

                    <div class="col-md-6">
                        <label class="form-label d-block">Gender</label>

                        <input type="radio" class="btn-check" name="NewPlayer.Gender" id="genderMale" value="Male" autocomplete="off"
                        @(Model.player?.Gender == DataAccessLayer.Enums.Gender.Male ? "checked" : "") />
                        <label class="btn-gender" for="genderMale">
                            <i class="bi bi-gender-male"></i> Male
                        </label>

                        <input type="radio" class="btn-check" name="NewPlayer.Gender" id="genderFemale" value="Female" autocomplete="off"
                        @(Model.player?.Gender == DataAccessLayer.Enums.Gender.Female ? "checked" : "") />
                        <label class="btn-gender" for="genderFemale">
                            <i class="bi bi-gender-female"></i> Female
                        </label>

                        <span asp-validation-for="player.Gender" class="text-danger d-block mt-1"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="player.Birthday" class="form-label"></label>
                        <input asp-for="player.Birthday" class="form-control" type="date" max="@Model.MaxDate" />
                        <span asp-validation-for="player.Birthday" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-center mt-4">
                    <a asp-page="../Index" class="btn text-white px-5 py-2 me-2" style="background-color: #c4553e; font-size: 1.25rem;">
                        Back
                    </a>
                    <button type="submit" class="btn text-white px-5 py-2" style="background-color: #c4553e; font-size: 1.25rem;">
                        Spara
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <partial name="Shared/_ValidationScriptsPartial" />
}