@page "{id:int}"
@model Tabletennis.Pages.Matches.DeleteModel
@{
    ViewData["Title"] = "Delete Match";
}
<h2>Delete Match</h2>

<div class="alert alert-danger">
    <strong>Are you sure you want to delete this match?</strong>
</div>

<div class="card mb-3 shadow">
    <div class="card-header bg-danger text-white">
        Match on @Model.Match.MatchDate.ToString("yyyy-MM-dd")
    </div>
    <div class="card-body">
        <p><strong>Player 1:</strong> @Model.Match.Player1Name</p>
        <p><strong>Player 2:</strong> @Model.Match.Player2Name</p>
        <p><strong>Winner:</strong> @Model.Match.Winner</p>
    </div>
</div>

<form method="post">
    <input type="hidden" asp-for="Match.MatchId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Matches/MatchHistory" class="btn btn-secondary">Cancel</a>
</form>
