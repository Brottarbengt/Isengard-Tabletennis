<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tabletennis</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Tabletennis.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.12.1/font/bootstrap-icons.min.css">
</head>
<body>
    <header class="top-header">
        <div class="top-bar">
            <div class="logo-section">
                <img src="~/images/Logo.gif" alt="Logo" class="logo" />
                <h1 class="site-title">ÄNGBY SPORTKLUBB</h1>
            </div>
            <div class="social-icons">
                <a href="https://www.youtube.com/channel/UCXhtPtV6_klWJF37c5MI0FA" class="youtube" target="_blank"><i class="bi bi-youtube"></i></a>
                <a href="https://solidsport.com/angbysk"><img src="~/images/social-icon.avif" alt="Stream" /></a>
                <a href="https://www.instagram.com/angbysk" class="instagram" target="_blank"><i class="bi bi-instagram "></i></a>
                <a href="https://www.facebook.com/angbysk" class="facebook" target="_blank"><i class="bi bi-facebook"></i></a>
            </div>
        </div>
        <nav class="main-nav">
            <a href="#" class="active">START</a>
            <div class="nav-item-group">
                <span class="nav-separator"></span>
                <a href="#">Match</a>
            </div>
            <div class="nav-item-group">
                <span class="nav-separator"></span>
                <a href="#">Match History</a>
            </div>
            <div class="nav-item-group">
                <span class="nav-separator"></span>
                <a href="/traning">För medlem: Träning</a>
            </div>
            <div class="nav-item-group">
                <span class="nav-separator"></span>
                <a href="/tavling">För medlem: Tävling</a>
            </div>
            <div class="nav-item-group">
                <span class="nav-separator"></span>
                <a href="/flytt">Flytt</a>
            </div>
            <div class="nav-item-group">
                <span class="nav-separator"></span>
                <a href="/event">Event</a>
            </div>
            <div class="nav-item-group">
                <span class="nav-separator"></span>
                <a href="/borja">Börja spela pingis</a>
            </div>
        </nav>
    </header>
    <div class="header-divider"></div> <!-- Yellow line appears here -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Tabletennis - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
